<!--  

To run this build script, type: 

ant -f composite.xml on a shell. 

-->
<project name="CompositeDesign_FileSystem_HW6" basedir="."  default="clean" xmlns:ivy="antlib:org.apache.ivy.ant">
	<property name="src" location="src" />
	<property name="bin" location="bin" />
    <property name="test.src" location="test/src" />
	<property name="test.bin" location="test/bin" />
	<property name="test.reports" location="test/reports" />
	<property name="ivy.lib" location="lib"/>
	
	<path id="classpath">
		<pathelement location="${bin}" />
		<pathelement location="${test.bin}" />
		<fileset dir="${ivy.lib}"/>
	</path>
	
	<target name="init">
		<mkdir dir="${bin}"/>
	    <mkdir dir="${test.bin}"/>
		<mkdir dir="${test.reports}"/>
		<mkdir dir="${ivy.lib}"/>
		<echo message="CLASSPATH is: ${toString:classpath}" />
	</target>
	
	<target name="resolve" depends="init"
			description="--> Download JAR files (listed in ivy.xml) to the 'lib' directory.">
		 <ivy:retrieve/>
		</target>
	
	<target name="compile" depends="resolve">
		<javac srcdir="${src}" destdir="${bin}" includeAntRuntime="no">
			<classpath refid="classpath"/>
			<include name="edu/umb/cs680/hw6/*.java"/>
		</javac>
	<javac srcdir="${test.src}" destdir="${test.bin}" includeAntRuntime="no"> 
			<classpath refid="classpath"/>
			<include name="edu/umb/cs680/hw6/*.java"/>
					
		</javac>
	</target>
	
	
	<target name="test.junit.launcher" depends="compile">
	  <echo message="Running JUnit tests" />
		<junitlauncher haltOnFailure="false" printSummary="true">		
			<classpath refid="classpath" />
			<testclasses outputdir="${test.reports}">
				<fileset dir="${test.bin}">
					<include name="edu/umb/cs680/hw6/*Test.class"/>
				</fileset>
				<listener type="legacy-plain" sendSysOut="true"/>
	        </testclasses>
		</junitlauncher>
	</target>

	
	<target name="clean" depends="test.junit.launcher">
		<delete includeemptydirs="true">
			<fileset dir="${bin}/edu/umb/cs680/hw6" includes="**/*"/>
		    <fileset dir="${test.bin}/edu/umb/cs680/hw6" includes="**/*"/>
		</delete>
	</target>
	
    <target name="clean-cache" 
    		description="--> clean the ivy cache (by default ~/.ivy2/cache)">
     
    </target>
</project>
